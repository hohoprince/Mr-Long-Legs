<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"></TextView>

            <EditText
                android:id="@+id/registration_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="휴대폰 번호"></TextView>

            <EditText
                android:id="@+id/registration_edit_phoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="요청지 주소"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnFirst"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"></Spinner>

                <Spinner
                    android:id="@+id/spnSecond"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <EditText
                android:id="@+id/registration_edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주소"></EditText>

            <EditText
                android:id="@+id/registration_edit_detailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="상세주소"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingTop="20dp"
                android:text="요청일시"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <NumberPicker
                    android:id="@+id/firstNumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"></TextView>

                <NumberPicker
                    android:id="@+id/secondNumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"></TextView>

                <NumberPicker
                    android:id="@+id/thirdNumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시"></TextView>

                <NumberPicker
                    android:id="@+id/fourthNumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분"></TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="마감일"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <NumberPicker
                    android:id="@+id/fifthNumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"></TextView>

                <NumberPicker
                    android:id="@+id/sixthNumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"></TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="내용"></TextView>

            <EditText
                android:id="@+id/registration_edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="긴박유무"></TextView>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="급해요"></RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="보통이에요"></RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="널널해요"></RadioButton>
            </RadioGroup>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="카테고리"></TextView>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/categoryOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="청소"
                                android:layout_weight="1"></RadioButton>

                            <RadioButton
                                android:id="@+id/categoryTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="반려동물"
                                android:layout_weight="1"></RadioButton>

                            <RadioButton
                                android:id="@+id/categoryThree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="딜리버리"
                                android:layout_weight="1"></RadioButton>

                            <RadioButton
                                android:id="@+id/categoryFour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="벌레퇴치"
                                android:layout_weight="1"></RadioButton>

                            <RadioButton
                                android:id="@+id/categoryFive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="육아"
                                android:layout_weight="1"></RadioButton>

                            <RadioButton
                                android:id="@+id/categorySix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="수리"></RadioButton>

                            <RadioButton
                                android:id="@+id/categorySeven"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="간병"
                                android:layout_weight="1"></RadioButton>

                            <RadioButton
                                android:id="@+id/categoryEight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="봉사"
                                android:layout_weight="1"></RadioButton>

                        <RadioButton
                            android:id="@+id/categoryEtc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기타"></RadioButton>

                    </RadioGroup>

            </LinearLayout>
            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격"></TextView>
            <EditText
                android:id="@+id/edit_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>


            <Button
                android:id="@+id/registration_button_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="요청하기"></Button>

        </LinearLayout>
    </ScrollView>


</LinearLayout>